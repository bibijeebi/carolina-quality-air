---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/services", label: "Services" },
  { href: "/benefits", label: "Benefits" },
  { href: "/nadca", label: "NADCA" },
  { href: "/contact", label: "Contact" },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-slate-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <img src="/images/logo-cqa.png" alt="Carolina Quality Air" class="h-12 sm:h-14 w-auto" />
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-1">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class:list={[
              "px-4 py-2 text-sm font-medium rounded-lg transition-colors",
              currentPath === link.href 
                ? "text-brand-600 bg-brand-50" 
                : "text-slate-600 hover:text-brand-600 hover:bg-slate-50"
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- CTA + Phone -->
      <div class="flex items-center gap-4">
        <a href="tel:+12523217447" class="hidden md:flex items-center gap-2 text-slate-600 hover:text-brand-600 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="text-sm font-semibold">252-321-7447</span>
        </a>
        <a 
          href="/contact" 
          class="inline-flex items-center gap-2 px-5 py-2.5 bg-brand-600 text-white text-sm font-semibold rounded-full hover:bg-brand-700 transition-all hover:shadow-lg hover:shadow-brand-600/25"
        >
          Get Quote
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>

        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2 text-slate-600 hover:text-brand-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Nav -->
  <div id="mobile-menu" class="hidden lg:hidden border-t border-slate-100 bg-white">
    <nav class="px-4 py-4 space-y-1">
      {navLinks.map(link => (
        <a 
          href={link.href}
          class:list={[
            "block px-4 py-3 text-sm font-medium rounded-lg transition-colors",
            currentPath === link.href 
              ? "text-brand-600 bg-brand-50" 
              : "text-slate-600 hover:text-brand-600 hover:bg-slate-50"
          ]}
        >
          {link.label}
        </a>
      ))}
      <a href="tel:+12523217447" class="flex items-center gap-2 px-4 py-3 text-brand-600 font-semibold">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        252-321-7447
      </a>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
