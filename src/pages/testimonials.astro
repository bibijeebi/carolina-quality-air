---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Testimonials" description="See what our customers say about Carolina Quality Air. 20,000+ systems cleaned since 1999.">
  <Header />
  
  <main class="pt-20">
    <!-- Hero -->
    <section class="relative py-24 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white overflow-hidden">
      <div class="absolute inset-0 opacity-20">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_70%,rgba(26,117,232,0.3),transparent_50%)]"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <span class="text-brand-400 font-semibold text-sm uppercase tracking-wider">Testimonials</span>
          <h1 class="text-5xl sm:text-6xl font-bold mt-3 mb-6">
            What our customers say
          </h1>
          <p class="text-xl text-slate-300 leading-relaxed">
            We've cleaned over 20,000 HVAC systems since 1999. Here's what some of our customers have to say about working with us.
          </p>
        </div>
      </div>
    </section>

    <!-- Testimonials Grid -->
    <section class="py-24 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div id="testimonials-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Loading skeletons -->
          {[1,2,3,4,5,6].map(() => (
            <div class="testimonial-skeleton bg-white rounded-2xl p-8 shadow-sm animate-pulse">
              <div class="flex gap-1 mb-4"><div class="w-24 h-5 bg-slate-200 rounded"></div></div>
              <div class="space-y-2 mb-6"><div class="h-4 bg-slate-200 rounded w-full"></div><div class="h-4 bg-slate-200 rounded w-5/6"></div><div class="h-4 bg-slate-200 rounded w-4/6"></div></div>
              <div class="flex items-center justify-between pt-4 border-t border-slate-100">
                <div><div class="h-4 bg-slate-200 rounded w-24 mb-2"></div><div class="h-3 bg-slate-200 rounded w-20"></div></div>
                <div class="w-10 h-10 bg-slate-200 rounded-full"></div>
              </div>
            </div>
          ))}
        </div>

        <script>
          async function loadTestimonials() {
            try {
              const res = await fetch('https://cqa-public-api.bennyforeman1.workers.dev/testimonials');
              const data = await res.json();
              const grid = document.getElementById('testimonials-grid');
              if (!data.length) { grid.innerHTML = '<p class="text-slate-500 text-center col-span-3">No testimonials yet.</p>'; return; }
              grid.innerHTML = data.map(t => `
                <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-shadow">
                  <div class="flex gap-1 mb-4">${Array(5).fill().map((_, i) => `<svg class="w-5 h-5 ${i < t.rating ? 'text-amber-400' : 'text-slate-200'}" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>`).join('')}</div>
                  <p class="text-slate-600 mb-6 leading-relaxed">"${t.text}"</p>
                  <div class="flex items-center justify-between pt-4 border-t border-slate-100">
                    <div><div class="font-semibold text-slate-900">${t.name}</div><div class="text-sm text-slate-500">${t.location_type} Customer</div></div>
                    <div class="w-10 h-10 bg-brand-100 rounded-full flex items-center justify-center"><svg class="w-5 h-5 text-brand-600" fill="currentColor" viewBox="0 0 24 24"><path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/></svg></div>
                  </div>
                </div>
              `).join('');
            } catch (e) { console.error('Failed to load testimonials:', e); }
          }
          document.addEventListener('DOMContentLoaded', loadTestimonials);
        </script>
      </div>
    </section>

    <!-- Stats -->
    <section class="py-16 bg-brand-600">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-4 gap-8 text-center text-white">
          <div>
            <div class="text-4xl font-bold">20,000+</div>
            <div class="text-brand-200 mt-1">Systems Cleaned</div>
          </div>
          <div>
            <div class="text-4xl font-bold">25+</div>
            <div class="text-brand-200 mt-1">Years Experience</div>
          </div>
          <div>
            <div class="text-4xl font-bold">5â˜…</div>
            <div class="text-brand-200 mt-1">Average Rating</div>
          </div>
          <div>
            <div class="text-4xl font-bold">100%</div>
            <div class="text-brand-200 mt-1">NADCA Certified</div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-24 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Join our satisfied customers</h2>
        <p class="text-xl text-slate-600 mb-10">
          Get a free quote and see why thousands of North Carolina homes and businesses trust Carolina Quality Air.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contact" 
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-brand-600 text-white font-semibold rounded-full hover:bg-brand-700 transition-all hover:shadow-lg"
          >
            Get Free Quote
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a 
            href="tel:+12523217447"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-slate-100 text-slate-900 font-semibold rounded-full hover:bg-slate-200 transition-all"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            252-321-7447
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
